{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "./dist",
        "baseUrl": ".",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": false,
        "declaration": true,
        "allowJs": false,
        "removeComments": true,
        "lib": [
            "es6"
        ],
        "paths": {
            "@builder/*": ["./builder/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "typings"
        ],
        "types": ["node", "webpack"]
    },
    "exclude": [
        "node_modules",
        "**/*.d.ts",
        "**/*.js"
    ],
    "include": [
       "**/*.ts"
    ]
}